<div class="container-fluid p-4">
  <div class="row">
  

    <main class="col-md-12 ms-sm-auto col-lg-12 ">
     
    <h2>manage users</h2>


     <div class="d-flex justify-content-between">
       <a href="admin/addUser" class="btn btn-success">Add User</a>

         <form action="" class="d-flex ">
                  <input type="text" name="fname" placeholder="   search by user name" class="" id="Search" onkeyup="search()">

                  <button class="w-25 btn btn-info mx-2" type="submit">search</button>
                </form>

       <a href="/logOut" class="btn btn-danger">log out</a>
     </div>

      <div class="table-responsive">
        <table class="table table-dark table-sm mt-4" id="admintable">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">first name</th>
              <th scope="col">last name</th>
              <th scope="col">phone</th>
              <th scope="col">e-mail</th>
            </tr>
          </thead>
          <tbody>
            {{#each user}}
            <tr>
              <td>{{index}}</td>
              <td>{{this.fname}}</td>
              <td>{{this.lname}}</td>
              <td>{{this.number}}</td>
              <td>{{this.mail}}</td>
              <td class="d-flex justify-content-end gap-2">
                <a href="/admin/editUser/{{this._id}}" class="btn btn-success">update</a>

                {{#if this.isEnabled}}
                <a href="/admin/disable-user/{{this._id}}" class="btn btn-warning">block</a>

               {{else}}

               <a href="/admin/enable-user/{{this._id}}" class="btn btn-warning"> Un-block</a>

                {{/if}}

                <a href="/admin/deleteUser/{{this._id}}" class="btn btn-danger" onclick ="return confirm('are you want to delete {{this.fname}} ?')">delete</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>